{
    "extends": [
        "airbnb-base",
        "plugin:php/recommended",
        "prettier"
    ],
    "plugins": [
        "php",
        "prettier"
    ],
    "rules": {
        "no-debugger": "error",
        "prettier/prettier": "error",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "info",
                    "error"
                ]
            }
        ],
        "no-var": "error",
        "no-use-before-define": "error",
        "eqeqeq": "warn",
        "camelcase": "error"
    },
    "ignorePatterns": [
        ".eslintrc.js",
        "prettier.config.js"
    ]
}
